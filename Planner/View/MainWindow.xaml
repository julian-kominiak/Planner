<Window x:Class="Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planner"
        xmlns:qv="clr-namespace:Planner.View"
        xmlns:vm="clr-namespace:Planner.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="#292929"/>
    </Window.Background>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <qv:PlannerView
        DateTime="{Binding Path=Planner.SelectedDate, Mode=TwoWay}"/>
</Window>
